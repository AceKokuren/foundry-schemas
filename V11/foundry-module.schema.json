{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "",
  "title": "Schema for module.json properties.",
  "type": "object",
  "allOf": [{"$ref": "./foundry-base-package.schema.json"}],
  "properties": {
    "packs": {
      "type": "array",
      "description": "Modules may come bundled with Compendium packs which include game content for various Document types. Compendium packs are defined as objects which have their own internal metadata structure.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "label": "string",
            "system": "string",
            "path": "string",
            "item": "string"
          }
        },
        "required": [
          "type",
          "system",
          "path",
          "item"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}